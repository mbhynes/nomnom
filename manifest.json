{
  "name": "Chrome webrequest test",
  "version": "0.1",
  "description": "A test for webrequest",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["require.js", "filename.js", "filesaver.js", "contentScript.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches":  ["<all_urls>"],
    "js": ["require.js", "filename.js", "filesaver.js"],
    "scripts": ["click.js"],
    "all_frames": true
  }],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_action": {}
}
