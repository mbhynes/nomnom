{
  "name": "Chrome webrequest test",
  "version": "0.1",
  "description": "A test for webrequest",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webNavigation",
    "webRequestBlocking",
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js",
      "utils.js"
     ],
    "persistent": true
  },
  "content_scripts": [{
    "run_at": "document_start",
    "matches":  ["<all_urls>"],
    "js": [
      "contentScript.js"
    ],
    "all_frames": true
  }]
}
